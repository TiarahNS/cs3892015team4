<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:adnroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.mathleague.SubtractionGame"
    android:background="@color/background">

    <TextView
        android:id="@+id/problem1"
        android:text=" 4 - 1 = ?"
        android:textColor="#378559"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="50dp"
        android:paddingTop="20dp"/>
    
    <ImageView
        android:id="@+id/mask1G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mask1"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/problem1"
        android:layout_alignLeft="@+id/mask3G"
        android:layout_alignStart="@+id/mask3G" />
    <ImageView
        android:id="@+id/mask2G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mask1"
        android:layout_alignTop="@+id/mask1G"
        android:layout_alignLeft="@+id/mask4G"
        android:layout_alignStart="@+id/mask4G" />
    <ImageView
        android:id="@+id/mask3G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mask1"
        android:layout_below="@+id/mask1G"
        android:layout_toLeftOf="@+id/mask4G"
        android:layout_toStartOf="@+id/mask4G"
        android:layout_marginTop="55dp" />
    <ImageView
        android:id="@+id/mask4G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mask1x"
        android:layout_alignTop="@+id/mask3G"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ans1"
        android:text="3"
        android:textColor="#569833"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="30sp"
        android:clickable="true"/>
    <TextView
        android:id="@+id/ans2"
        android:text="0"
        android:textColor="#556fff"
        android:textSize="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignTop="@+id/ans1"
        android:layout_toRightOf="@+id/mask3G"
        android:layout_toEndOf="@+id/mask3G"
        android:clickable="true"/>
    <TextView
        android:id="@+id/ans3"
        android:text="2"
        android:textColor="#ff9059"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40sp"
        android:layout_alignTop="@+id/ans1"
        android:layout_toRightOf="@+id/mask4G"
        android:layout_toEndOf="@+id/mask4G"
        android:clickable="true"/>
    <TextView
        android:id="@+id/ans4"
        android:text="4"
        android:textColor="#4555ff"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40sp"
        android:layout_alignTop="@+id/ans1"
        android:layout_toRightOf="@+id/mask3G"
        android:layout_toEndOf="@+id/mask3G"
        android:clickable="true"/>

</RelativeLayout>
